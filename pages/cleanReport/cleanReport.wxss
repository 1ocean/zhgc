/* pages/cleanReport/cleanReport.wxss */
.content {
  margin: 40rpx 60rpx 0rpx;
}
.content__title {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
}

.content__body {
  padding: 20rpx 40rpx;
  background: rgba(0, 0, 0, 0.2);
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  color: #eeeeee;
  line-height:50rpx;
  font-size: 28rpx;
  overflow: hidden;
}
textarea {
  width: 100%;
  height: 80%;
  padding: 25rpx 0;
}

.textarea-wrp {
  padding: 0 25rpx;
  background-color:rgb(86, 108, 243);
  height: 20vh;
}

.textarea-section{
  width: 100%;
  margin-bottom: 60rpx;
}

.textarea-section:last-child{
  margin-bottom: 0;
}

.textarea-section-title{
  font-size: 28rpx;
  color: black;
  margin-bottom: 10rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.cancel-btn{
  width: 40%;
  display: inline-block;
}
.affirm-btn{
  width: 40%;
  display: inline-block;
}
.img{
  height: 35vh;
  width: 100%;
}
.button{
  text-align: center
}